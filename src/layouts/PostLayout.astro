---
import MasterLayout from "@layouts/MasterLayout.astro";

let { frontmatter } = Astro.props;
let title = frontmatter.title + " | Jarred's Garden"
---

<MasterLayout {title} >
    <div>
        <a href="/writing"><span>&larr; Writing</span></a>
    </div>
    <div class="writing-content">
        <slot />
    </div>
</MasterLayout>

<style is:inline>
    .writing-content p:first-of-type {
        min-height: 60px;
    }

    .writing-content p:first-of-type:first-letter {
          color: var(--fire-engine-red);
          font-family: var(--drop-caps-font);
          float: left;
          font-size: 4em;
          padding-right: 8px;
    }
</style>
