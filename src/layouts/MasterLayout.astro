---
import Nav from "../components/Nav.astro";
import Footer from "../components/Footer.astro"

export interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
        <div id="page-container">
            <header>
                <Nav />
            </header>
            <div id="contentspace">
                <main>
                    <slot />
                </main>
            </div>
            <footer>
                <Footer />
            </footer>
        </div>
	</body>
</html>

<style is:global>
	@font-face { font-family: Inter; src: url("/fonts/Inter-Regular.ttf"); } 
 	@font-face { font-family: Inter; font-weight: bold; src: url("/fonts/Inter-Bold.ttf"); }
	@font-face { font-family: IBMPlexMono; font-weight: bold; src: url("/fonts/IBMPlexMono-Regular.ttf"); }
    @font-face { font-family: AlteCaps; src: url("/fonts/Alte-Caps.ttf"); }

	:root {
		/* Palette */
		--cultured: #eff1edff;
		--fern-green: #537147;
		--dark-orange: #f58f29ff;
		--black-olive: rgb(23, 26, 23);
		--fire-engine-red: #c1292eff;

		/* Fonts */
		--default-font: Inter, sans-serif;
		--code-font: IBMPlexMono, monospace;
        --drop-caps-font: AlteCaps, Georgia;

		/* Colour */
		--background-color: var(--fern-green);
		--content-background-color: var(--cultured);
		--default-font-color: var(--black-olive);
		--accent-color: var(--fire-engine-red);
	}

    * {
        box-sizing: border-box;
    }

	html, body {
		height: 100%;
		margin: 0;
	}

	html {
		font-family: var(--default-font);
		color: var(--default-font-color);
		background-color: var(--background-color);
	}

    /* Type styling */
	code {
		font-family: var(--code-font);
	}

	a {
		font-style: italic;
		color: var(--accent-color);
	}

    /* Content layout */
	header, main, footer {
		background-color: var(--content-background-color);
		border: 1px solid rgba(0, 0, 0, 0.767);

		margin: 15px auto;
		padding: 1.5rem;
		width: 100%;
	}

	#page-container {
		min-height: 100vh;
		display: flex;
		flex-direction: column;
		margin: 0 auto;
		width: clamp(20em, 100%, 60ch);
	}

	#contentspace {
		flex: 1;
	}
</style>
